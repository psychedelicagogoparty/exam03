<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <%= form_for(@photo) do |f| %>
      <%= f.error_messages! %>

      <div class="field">
        <%= f.text_field :name, placeholder:"タイトル", class:'form-control' %>
      </div>
      <br/>

      <div class="field">
        <%= f.text_field :content , placeholder:"コメント", class:'form-control' %>
      </div>

      <div class="field">
        <!-- <＃%= profile_img(@photo) if profile_img(@photo) %> -->
          <% if @photo.photo.model.photo.blank? %>
                <!-- <%# binding.pry %> -->
                <h3>画像を投稿する</h3>
                <!-- <%= image_tag(@photo.photo, :size => "200x200")%> -->
                <%= f.file_field :photo %>
                <%= f.hidden_field :photo_cache %>
          <% else %>
                <!-- <%# binding.pry %> -->
                <h3>画像を更新する</h3>
                <%= image_tag(@photo.photo, :size => "200x200")%>
                <%= f.file_field :photo %>
                <!-- <%= f.hidden_field :photo_cache %> -->
          <% end %>
      </div>

      <div class="actions">
        <%= f.submit "登録", method:'post', class:'btn btn-block btn-primary'%>
      </div>
    <% end %>

  </div>
</div>
