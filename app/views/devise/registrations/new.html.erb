<h2>サインアップ</h2>

<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス", class:"form-control" %>
  </div>
  <br/>

  <div class="field">
    <%= f.text_field :name, placeholder:"名前" ,class: "form-control"%>
  </div>
  <br/>

  <div class="field">
    <!-- <%= f.label :password %> -->
    <% if @minimum_password_length %>
    <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder:"パスワード", class:"form-control"%>
  </div>
  <br/>

  <div class="field">
    <!-- <%= f.label :password_confirmation %><br /> -->
    <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder:"パスワードを再入力", class:"form-control"%>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "サインアップ", class:"btn btn-block btn-primary"%>
  </div>
<% end %>
<br/>

<%= render "devise/shared/links" %>
  </div>
</div>
